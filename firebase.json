{
  "database": {
    "rules": "app.js"
  },
  "firestore": {
    "rules": "app.js",
    "indexes": "app.js"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "yes",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "app.js"
  },
  "emulators": {
    "functions": {
      "port": "3000"
    },
    "firestore": {
      "port": 8080
    }
  }
}
